<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thuo.nexthome.Main8Activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="408dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hc" />

        <TextView
            android:id="@+id/textView47"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:text="ABOUT THIS PROPERTY"
            android:textColor="#0c1d54"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView48"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:text="The villa is a modern,elegantly furnished and family friendly 5 bedroomed house . It is located in a serene, quiet and clean environment with 24 hour private security and police patrol."
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView49"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:text="It's within a short distance from the UN, USA embassy and the Village market mall. It is also 3 min drive from Ridgeways mall."
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView56"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rent:Ksh.29,000."
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:text="Call to book" />

    </LinearLayout>

</ScrollView>
