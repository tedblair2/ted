<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thuo.nexthome.Main15Activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="match_parent"
            android:layout_height="222dp"
            app:srcCompat="@drawable/ra" />

        <TextView
            android:id="@+id/textView91"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:text="ABOUT THIS PROPERTY"
            android:textColor="#101766"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView92"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:text="A residence so rare, it shall be graced only by the lucky few! Your 3 bedroom all en-suite spacious residence at Kings Sherwood is meticulously planned to optimize space, as well as provide for all your needs. "
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView93"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:text="Each apartment is finished to high standards with good quality materials, branded fittings and colored ceramic tiles in all wet area. "
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView94"
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:text="The apartments have a swimming pool with separate changing rooms, gym, 24 hrs security service, two parking spaces for every flat, street lights, 3 phase power and community center, cabro surfaced driveways and parking bays."
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView95"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="Property price:  KSh 20,000,000"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button29"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:text="Call to Book" />
    </LinearLayout>

</ScrollView>
