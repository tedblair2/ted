<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thuo.nexthome.Main3Activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="479dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ca" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="ABOUT THIS PROPERTY"
            android:textColor="#0f1b51"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:text="We're providing a spacious, self-contained 4 bedroom apartment with servants quarters near the Junction Mall along Riara road. The apartments have a lift,common parking area,swimming pool and gym. The apartment is on the 7th floor with breathtaking views of Kilimani."
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:text="Apart from the mall, there are a number of popular entertainment venues including the Ngong Race Course, Brew Bistro and the Impala Sports Club. Its easily accessible by car or public transport and the area is very secure - a stone throw away from the Egyptian embassy."
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView51"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rent:ksh.27,000."
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:text="Call to book" />
    </LinearLayout>

</ScrollView>
